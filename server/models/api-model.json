{
  "schema": {
    "name": "Advanced Python Scheduler API on Flask, Gevent & Gunicorn in Docker",
    "documentation": "https://github.com/viniciuschiele/flask-apscheduler",
    "api_methods": [
      { "endpoint": "/scheduler", "description": "get_scheduler_info", "method": "GET"},
      { "endpoint": "/scheduler/jobs", "description": "add_job", "method": "POST" },
      { "endpoint": "/scheduler/jobs", "description": "get_jobs", "method": "GET" },
      { "endpoint": "/scheduler/jobs/<job_id>", "description": "get_job", "method": "GET" },
      { "endpoint": "/scheduler/jobs/<job_id>", "description": "delete_job", "method": "DELETE" },
      { "endpoint": "/scheduler/jobs/<job_id>", "description": "update_job","method": "PATCH" },
      { "endpoint": "/scheduler/jobs/<job_id>/pause", "description": "pause_job", "method": "POST" },
      { "endpoint": "/scheduler/jobs/<job_id>/resume", "description": "resume_job", "method": "POST" },
      { "endpoint": "/scheduler/jobs/<job_id>/run", "description": "run_job", "method": "POST" }
    ]
  }
}